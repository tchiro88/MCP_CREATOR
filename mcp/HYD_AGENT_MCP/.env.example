# Hydraulic Analysis MCP Server Environment Configuration

# ===========================
# API Configuration
# ===========================

# OpenAI API Key (for GPT-4 Vision)
OPENAI_API_KEY=your-openai-api-key-here

# OpenRouter API Key (alternative to OpenAI)
# OPENROUTER_API_KEY=your-openrouter-api-key-here

# ===========================
# Database Configuration
# ===========================

# Database type: sqlite or postgresql
DB_TYPE=sqlite

# PostgreSQL Configuration (if using)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=sparkplug_system
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password_here

# ===========================
# Analysis Configuration
# ===========================

# Watch schematics folder for new files
WATCH_SCHEMATICS=true

# Watch interval in seconds
WATCH_INTERVAL=5
