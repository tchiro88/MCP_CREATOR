# ============================================================================
# MCP Infrastructure Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env to Git!

# ============================================================================
# n8n Configuration
# ============================================================================

# n8n Admin Credentials
N8N_USER=admin
N8N_PASSWORD=your-secure-password-here

# n8n API Key (generate from n8n Settings â†’ API)
N8N_API_KEY=your-n8n-api-key-here

# n8n Webhook URL (use your Cloudflare Tunnel domain)
N8N_WEBHOOK_URL=https://n8n.yourdomain.com

# Timezone
TIMEZONE=America/New_York

# ============================================================================
# Cloudflare Tunnel Configuration
# ============================================================================

# Option 1: Use Tunnel Token (easier, recommended)
# Get this by running: cloudflared tunnel create your-tunnel-name
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token-here

# Option 2: Use Config File (more flexible)
# If using config file, comment out CLOUDFLARE_TUNNEL_TOKEN above
# and mount your config.yml and credentials.json in docker-compose.yml

# ============================================================================
# Database Configuration (if using custom MCP servers)
# ============================================================================

# PostgreSQL
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=your-postgres-password-here
POSTGRES_DB=mcp_db

# Database URL for MCP servers
DATABASE_URL=postgresql://mcp_user:your-postgres-password-here@postgres:5432/mcp_db

# ============================================================================
# External Service Credentials (for MCP servers)
# ============================================================================

# GitHub
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Notion
NOTION_API_KEY=secret_your_notion_integration_key

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# OpenAI (if using AI features in n8n)
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================================================
# Security & OAuth Configuration
# ============================================================================

# OAuth Client Credentials (if implementing OAuth for MCP servers)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=https://mcp.yourdomain.com/oauth/callback

# JWT Secret (for token signing)
JWT_SECRET=your-random-jwt-secret-here

# ============================================================================
# Monitoring & Logging (optional)
# ============================================================================

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn-here

# Log Level
LOG_LEVEL=info

# ============================================================================
# Performance & Scaling
# ============================================================================

# Node.js Memory Limit (in MB)
NODE_OPTIONS=--max-old-space-size=2048

# Redis Connection
REDIS_URL=redis://redis:6379
